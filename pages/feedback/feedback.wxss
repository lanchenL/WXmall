page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips view {
  width: 30%;
  padding: 10rpx 0;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  width: 90rpx;
  height: 90rpx;
  margin: 0rpx;
  font-size: 50rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ccc;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button {
  color: white;
  background-color: #fa5151;
  width: 30%;
  margin: 0;
  padding: 20rpx 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fb_main .form_btn_wrap button icon {
  padding-right: 10rpx;
}
