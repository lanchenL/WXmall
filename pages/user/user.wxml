<view class="user_info_wrap">
  <view class="user_img_wrap" wx:if="{{userinfo.avatarUrl}}">
    <image class="user_big" src="{{userinfo.avatarUrl}}">

    </image>
    <view class="user_info">
      <image class="user_icon" src="{{userinfo.avatarUrl}}">

      </image>
      <view class="user_name">
        {{userinfo.nickName}}
      </view>
    </view>
  </view>
  <view class="user_btn" wx:else>
    <navigator url="/pages/login/login" open-type="navigate">
      登录
    </navigator>
  </view>
</view>
<view class="user_content">
  <view class="user_main">
    <!-- 历史足迹 -->
    <view class="history_wrap">
      <navigator open-type="navigate" url="/pages/collect/collect">
        <view class="his_num">
          0
        </view>
        <view class="his_name">
          收藏的店铺
        </view>
      </navigator>
      <navigator open-type="navigate" url="/pages/collect/collect">
        <view class="his_num">
          {{collectNums}}
        </view>
        <view class="his_name">
          收藏的商品
        </view>
      </navigator>
      <navigator open-type="navigate" url="/pages/collect/collect">
        <view class="his_num">
          0
        </view>
        <view class="his_name">
          关注的商品
        </view>
      </navigator>
      <navigator open-type="navigate" url="/pages/collect/collect">
        <view class="his_num">
          0
        </view>
        <view class="his_name">
          我的足迹
        </view>
      </navigator>
    </view>
    <!-- 我的订单 -->
    <view class="orders_wrap">
      <view class="orders_title">
        我的订单
      </view>
      <view class="order_content">
        <navigator open-type="navigate" url="/pages/order/order?type=1">
          <view class="iconfont icon-ding_dan">
          </view>
          <view class="order_name">
            全部订单
          </view>
        </navigator>
        <navigator open-type="navigate"  url="/pages/order/order?type=2">
          <view class="iconfont icon-fukuantongzhi">
          </view>
          <view class="order_name">
            待付款
          </view>
        </navigator>
        <navigator open-type="navigate" url="/pages/order/order?type=3">
          <view class="iconfont icon-receipt-address">
          </view>
          <view class="order_name">
            待收货
          </view>
        </navigator>
        <navigator open-type="navigate" >
          <view class="iconfont icon-tuihuotuikuan_dianpu">
          </view>
          <view class="order_name">
            退款/退货
          </view>
        </navigator>
      </view>
    </view>
    <!-- 收货地址管理 -->
    <view class="address_wrap">
      收货地址管理
    </view>
    <!-- 应用信息相关 -->
    <view class="app_info_warp">
      <view class="app_info_item app_info_contact">
        <view >
          联系客服
        </view>
        <view >
          4000-555-666
        </view>
        <button open-type="contact">
        </button>
      </view>
      <navigator class="app_info_item" url="/pages/feedback/feedback">
        意见反馈
      </navigator>
      <view class="app_info_item" bindtap="handleAboutOur">
        关于我们
      </view>
    </view>
    <!-- 推荐 -->
    <view class="recommend_wrap">
      把应用推荐给其他人
      <button open-type="share">
      </button>
    </view>
  </view>
</view>